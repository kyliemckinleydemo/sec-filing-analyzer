{
  "buildCommand": "npx prisma generate && npm run build",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/analyze/**/*.ts": {
      "maxDuration": 300
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 300
    },
    "app/api/backfill/**/*.ts": {
      "maxDuration": 300
    },
    "app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-filings-rss",
      "schedule": "0 2 * * *"
    }
  ]
}

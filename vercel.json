{
  "buildCommand": "npx prisma generate && npm run build",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/analyze/**/*.ts": {
      "maxDuration": 300
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 300
    },
    "app/api/backfill/**/*.ts": {
      "maxDuration": 300
    },
    "app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-filings-rss",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/daily-filings-rss",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/daily-filings-rss",
      "schedule": "0 22 * * *"
    },
    {
      "path": "/api/cron/update-analyst-data",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/watchlist-alerts?time=morning",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/cron/watchlist-alerts?time=evening",
      "schedule": "0 23 * * *"
    },
    {
      "path": "/api/cron/update-stock-prices-batch",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/update-stock-prices-batch",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/update-stock-prices-batch",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/update-stock-prices-batch",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/update-stock-prices-batch",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/cron/update-stock-prices-batch",
      "schedule": "0 20 * * *"
    }
  ]
}
